configuration {
  modi: "run";
  width: 20;
  font: "UW ttyp0 12";
  terminal: "alacritty";
  disable-history: false;
  sidebar-mode: true;
  tokenize: true;
  m: "-5";
  line-margin: 2;
  line-padding: 1;
  separator-style: "none";
  hide-scrollbar: true;
  window-format: "{w} {c}";
}

* {
  bg: #0f0f0f;
  fg: #f0f0f0;
  accent: #82e1b9;
  
  background-color: @bg;
  text-color: @fg;
}

window {
  padding: 50px;
  border: 3px;
  border-color: @accent;
}

prompt, entry {
  enabled: false;
}

element {
  padding: 10px;
  text-align: center;
}

element selected {
  background-color: @accent;
  text-color: @bg;
}

button {
    enabled: false;
}
